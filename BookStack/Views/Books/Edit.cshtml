@model BookDto
@{
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <link href="/css/style.css" rel="stylesheet" />
        <title>Edit Book</title>
        
    </head>
    <body>
    <div class="main row justify-content-center">

        <div class="text-center">
            <h1 class="display-5 mb-5">
                <strong>Edit Book</strong>
            </h1>
        </div>

        <form method="post" enctype="multipart/form-data" class="row justify-content-center mb-4" autocomplete="off">

            <!-- ID -->
            <div class="col-10 col-md-8 mb-3">
                <label>ID</label>
                <input class="form-control" readonly value="@ViewData["Id"]" type="text" placeholder="Enter the Book Name">
            </div>

            <!-- Book Title -->
            <div class="col-10 col-md-8 mb-3">
                <label for="bookTitle">Book Title</label>
                <input class="form-control" asp-for="Title" type="text" placeholder="Enter the Book Name">
            </div>

            <!-- Price -->
            <div class="col-10 col-md-8 mb-3">
                <label for="price">Price</label>
                <input class="form-control" asp-for="Price" type="number" placeholder="Enter Product Price">
            </div>

            <!-- Category -->
            <div class="col-10 col-md-8 mb-3">
                <label for="category">Category</label>
                <input class="form-control" asp-for="Category" type="text" placeholder="Enter Category Name">
            </div>

            <!-- Description -->
            <div class="col-10 col-md-8 mb-3">
                <label for="description">Description</label>
                <input class="form-control" asp-for="Description" type="text"
                       placeholder="Description">
            </div>

            <!-- Image -->
            <div class="col-10 col-md-8 mb-3">
                <label for="ImageFile">Image</label>
                <input class="form-control" asp-for="ImageFile" type="file"
                       placeholder="Image">
            </div>
            <!-- Image View -->
            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-8">
                    <img src="/images/@ViewData["ImageFileName"]" alt="Alternate Text" width="150" />
                </div>
            </div>

            <!-- Submit -->
            <div class="col-10 col-md-8">
                <input class="btn btn-success add-btn" type="submit" value="Submit">
            </div>
        </form>
    </div>
    </body>
</html>
