@model List<Book>

@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>BookStack - Admin</title>
</head>

<body>

    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-5 mb-5">
                <strong>BookStack</strong>
            </h1>
        </div>
        <div class="main">
            <div class="main row justify-content-center">
                


                <!-- Products Table list -->
                <div class="col-12 col-md-10 mt-5">
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Book Title</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Id</td>
                                    <td>@product.Title</td>
                                    <td>$@product.Price.ToString("F2")</td>
                                    <td>@product.Category</td>
                                    <td>


                                        <a class="btn btn-warning btn-sm edit" asp-controller="Books"
                                           asp-action="Edit" asp-route-id="@product.Id">Edit</a>


                                        <a class="btn btn-danger btn-sm delete" asp-controller="Books"
                                           asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

                <form action="" id="product-input" class="row justify-content-center mb-4" autocomplete="off">



                    <!-- Add Book -->
                    <div class="col-10 col-md-10">
                        <input class="btn btn-success add-btn" asp-controller="Books" asp-action="Create" type="submit" value="Add Book">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="main.js"></script>
</body>

</html>